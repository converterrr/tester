-- Grow a Garden Spawner GUI with Dropdowns
-- Hosted loader-compatible script for Volcano, Delta, etc.

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local Spawner = loadstring(game:HttpGet("https://raw.githubusercontent.com/ataturk123/GardenSpawner/refs/heads/main/Spawner.lua"))()
Spawner.Load()

-- UI Library (Simple Dropdown GUI)
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 300, 0, 300)
Frame.Position = UDim2.new(0.5, -150, 0.5, -150)
Frame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
Frame.BorderSizePixel = 0
Frame.Parent = ScreenGui

local function createDropdown(labelText, items, callback)
    local label = Instance.new("TextLabel")
    label.Text = labelText
    label.Size = UDim2.new(1, 0, 0, 25)
    label.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.Parent = Frame

    local dropdown = Instance.new("TextButton")
    dropdown.Size = UDim2.new(1, 0, 0, 25)
    dropdown.Position = UDim2.new(0, 0, 0, #Frame:GetChildren() * 30)
    dropdown.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    dropdown.TextColor3 = Color3.fromRGB(255, 255, 255)
    dropdown.Text = "Choose..."
    dropdown.Parent = Frame

    dropdown.MouseButton1Click:Connect(function()
        local menu = Instance.new("Frame")
        menu.Size = UDim2.new(1, 0, 0, math.min(#items, 10) * 25)
        menu.Position = UDim2.new(0, 0, 0, dropdown.Position.Y.Offset + 25)
        menu.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
        menu.Parent = Frame

        for i, item in ipairs(items) do
            local option = Instance.new("TextButton")
            option.Size = UDim2.new(1, 0, 0, 25)
            option.Position = UDim2.new(0, 0, 0, (i - 1) * 25)
            option.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
            option.TextColor3 = Color3.fromRGB(255, 255, 255)
            option.Text = item
            option.Parent = menu

            option.MouseButton1Click:Connect(function()
                dropdown.Text = item
                callback(item)
                menu:Destroy()
            end)
        end
    end)
end

-- Pets Dropdown
local pets = {
    "Raccoon", "Butterfly", "Bee", "Flamingo", "Caterpillar",
    "Bat", "Mole", "Worm", "Skunk", "Snail",
    "Shiny Raccoon", "Golden Butterfly", "Dark Caterpillar"
}
createDropdown("Spawn Pet", pets, function(pet)
    Spawner.SpawnPet(pet, 1, 2)
end)

-- Seeds Dropdown
local seeds = {
    "Sunflower", "Carrot", "Candy Blossom", "Corn", "Moon Berry",
    "Golden Carrot", "Crystal Corn"
}
createDropdown("Spawn Seed", seeds, function(seed)
    Spawner.SpawnSeed(seed)
end)

-- Eggs Dropdown
local eggs = {
    "Common Egg", "Uncommon Egg", "Rare Egg", "Mythical Egg", "Night Egg"
}
createDropdown("Spawn Egg", eggs, function(egg)
    Spawner.SpawnEgg(egg)
end)

print("Grow a Garden GUI loaded with dropdowns.")
