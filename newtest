-- Grow a Garden Spawner GUI with Dropdowns & Spawn Functionality
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- Main UI
local ScreenGui = Instance.new("ScreenGui", PlayerGui)
ScreenGui.Name = "GrowSpawnerGUI"
ScreenGui.ResetOnSpawn = false

local MainFrame = Instance.new("Frame", ScreenGui)
MainFrame.Size = UDim2.new(0, 300, 0, 300)
MainFrame.Position = UDim2.new(0.05, 0, 0.2, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true

local UICorner = Instance.new("UICorner", MainFrame)
UICorner.CornerRadius = UDim.new(0, 12)

local Title = Instance.new("TextLabel", MainFrame)
Title.Size = UDim2.new(1, 0, 0, 40)
Title.Text = "üå± Grow a Garden Spawner"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.BackgroundTransparency = 1
Title.Font = Enum.Font.GothamBold
Title.TextSize = 18

local DropdownTemplate = function(name, items)
	local Dropdown = Instance.new("Frame", MainFrame)
	Dropdown.Size = UDim2.new(1, -20, 0, 30)
	Dropdown.Position = UDim2.new(0, 10, 0, 50 + (#MainFrame:GetChildren() - 2) * 35)
	Dropdown.BackgroundColor3 = Color3.fromRGB(45, 45, 45)

	local UICorner = Instance.new("UICorner", Dropdown)
	UICorner.CornerRadius = UDim.new(0, 6)

	local Label = Instance.new("TextLabel", Dropdown)
	Label.Size = UDim2.new(0.4, 0, 1, 0)
	Label.Text = name
	Label.TextColor3 = Color3.fromRGB(255, 255, 255)
	Label.BackgroundTransparency = 1
	Label.Font = Enum.Font.Gotham
	Label.TextSize = 14
	Label.TextXAlignment = Enum.TextXAlignment.Left

	local Drop = Instance.new("TextButton", Dropdown)
	Drop.Size = UDim2.new(0.6, 0, 1, 0)
	Drop.Position = UDim2.new(0.4, 0, 0, 0)
	Drop.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
	Drop.TextColor3 = Color3.fromRGB(255, 255, 255)
	Drop.Text = "Select"
	Drop.Font = Enum.Font.Gotham
	Drop.TextSize = 14

	local UICornerBtn = Instance.new("UICorner", Drop)
	UICornerBtn.CornerRadius = UDim.new(0, 6)

	local Selected = nil

	Drop.MouseButton1Click:Connect(function()
		local Menu = Instance.new("Frame", ScreenGui)
		Menu.Size = UDim2.new(0, 200, 0, #items * 25)
		Menu.Position = UDim2.new(0, Drop.AbsolutePosition.X, 0, Drop.AbsolutePosition.Y + 25)
		Menu.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
		Menu.BorderSizePixel = 0

		for i, item in ipairs(items) do
			local Option = Instance.new("TextButton", Menu)
			Option.Size = UDim2.new(1, 0, 0, 25)
			Option.Position = UDim2.new(0, 0, 0, (i - 1) * 25)
			Option.Text = item
			Option.Font = Enum.Font.Gotham
			Option.TextColor3 = Color3.fromRGB(255, 255, 255)
			Option.BackgroundTransparency = 1
			Option.MouseButton1Click:Connect(function()
				Drop.Text = item
				Selected = item
				Menu:Destroy()
			end)
		end
	end)

	return function()
		return Selected
	end
end

-- Spawner library
local Spawner = loadstring(game:HttpGet("https://raw.githubusercontent.com/ataturk123/GardenSpawner/refs/heads/main/Spawner.lua"))()
Spawner.Load()

-- Data
local pets = Spawner.GetPets()
local seeds = Spawner.GetSeeds()
local fruits = { "Golden Apple", "Sunberry", "Sweet Melon", "Blue Mango", "Mystery Fruit" }

-- Dropdowns
local getPet = DropdownTemplate("Pet", pets)
local getSeed = DropdownTemplate("Seed", seeds)
local getFruit = DropdownTemplate("Fruit", fruits)

-- Spawn Button
local SpawnButton = Instance.new("TextButton", MainFrame)
SpawnButton.Size = UDim2.new(1, -20, 0, 40)
SpawnButton.Position = UDim2.new(0, 10, 1, -50)
SpawnButton.Text = "üêæ Spawn Selection"
SpawnButton.BackgroundColor3 = Color3.fromRGB(80, 150, 80)
SpawnButton.TextColor3 = Color3.fromRGB(255, 255, 255)
SpawnButton.Font = Enum.Font.GothamBold
SpawnButton.TextSize = 16

local UICornerSpawn = Instance.new("UICorner", SpawnButton)
UICornerSpawn.CornerRadius = UDim.new(0, 10)

SpawnButton.MouseButton1Click:Connect(function()
	local pet = getPet()
	local seed = getSeed()
	local fruit = getFruit()

	if pet then
		Spawner.SpawnPet(pet, 1, 1)
	end
	if seed then
		Spawner.SpawnSeed(seed)
	end
	if fruit then
		Spawner.Spin(fruit)
	end
end)
